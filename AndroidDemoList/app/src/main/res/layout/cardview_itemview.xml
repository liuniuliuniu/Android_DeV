<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    app:cardBackgroundColor="#eee"
    app:cardCornerRadius="10dp"
    app:contentPadding="10dp"
    app:cardElevation="20dp"
    app:cardUseCompatPadding="true"
    >
    <!--
    cardBackgroundColor="#ff0000"  卡片布局的背景颜色
    cardCornerRadius="10dp" 卡片圆角大小
    contentPadding="10dp" 卡片布局与内容之间的距离
    cardElevation  设置阴影的大小
    cardUseCompatPadding="true" 是否设置内边距
    -->

    <ImageView
        android:id="@+id/img_icon"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/dizhonghai_line"
        android:layout_gravity="center"
         />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地中海"
        android:textSize="24dp"
        android:gravity="center"
        android:textColor="#716f80"
        android:textAlignment="center"
        android:layout_gravity="center"
        />


</android.support.v7.widget.CardView>