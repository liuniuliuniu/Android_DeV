<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layout.ActivityConstraintLayout">

    <TextView
        android:id="@+id/centerV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorAccent"
        />

    <TextView
        android:id="@+id/centerV01"
        android:layout_width="50dp"
        android:layout_height="50dp"

        app:layout_constraintBottom_toTopOf="@id/centerV"
        app:layout_constraintRight_toLeftOf="@+id/centerV"
        android:background="@color/colorPrimary"
        />


    <TextView
        android:id="@+id/centerV02"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@id/centerV"
        app:layout_constraintLeft_toRightOf="@+id/centerV"
        android:background="@color/colorPrimary"
        />


    <TextView
        android:id="@+id/centerV03"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/centerV"
        app:layout_constraintLeft_toRightOf="@+id/centerV"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/centerV04"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/centerV"
        app:layout_constraintRight_toLeftOf="@+id/centerV"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/centerV05"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        />
    <TextView
        android:id="@+id/centerV06"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/centerV07"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/centerV08"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimary"
        />


    <TextView
        android:id="@+id/centerV09"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorPrimary"
        />


</android.support.constraint.ConstraintLayout>