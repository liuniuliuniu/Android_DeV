<resources>

    <!-- Base application theme.  默然的主题修改成NoActionBar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme_NoTitleBar" parent="AppTheme"></style>


    <style name="AppTheme_FullScreen" parent="AppTheme_NoTitleBar">
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!--有不同按钮样式相同的应该吧样式提取出来-->
    <style name="Button_Large_Black"
        parent="Widget.AppCompat.Button">
        <item name="background">@drawable/btn_bg_black</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

</resources>
